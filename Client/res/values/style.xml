<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <style name="TextWithShadow">
    	<item name="android:textColor">#ffffff</item>>
    	<item name="android:textStyle">bold</item>
    	<item name="android:shadowColor">#000000</item>
    	<item name="android:shadowDx">1</item>
    	<item name="android:shadowDy">1</item>
    	<item name="android:shadowRadius">2</item>
	</style>
	
    <style name="ChronoStyle" parent="TextWithShadow">
    	<item name="android:textSize">50dp</item>
    	<item name="android:layout_margin">0dp</item>
    	<item name="android:gravity">center</item>
    </style>
    	
    <style name="SlideButton" parent="TextWithShadow">
    	<item name="android:layout_margin">3dp</item>
    	<item name="android:textSize">30dp</item>
	</style>
	
    <style name="ChronoButton" parent="TextWithShadow">
    	<item name="android:layout_margin">3dp</item>
    	<item name="android:layout_gravity">center_vertical</item>
	</style>
	
    <style name="Logo" parent="TextWithShadow">
    	<item name="android:textSize">150dp</item>
    	<item name="android:gravity">center</item>
	</style>
</resources>